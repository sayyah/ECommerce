@page "/Admin/CreateBlogCategory"
@model ArshaHamrah.Areas.Admin.Pages.BlogCategories.CreateModel
@{
    ViewData["Title"] = "اضافه کردن دسته بندی ";
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        ایجاد دسته بندی  جدید
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام</label>
                            <input asp-for="@Model.BlogCategory.Name" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.BlogCategory.Name" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                   
                                    <div class="form-group">
                            <label>مسیر</label>
                            <input asp-for="@Model.BlogCategory.Path" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.BlogCategory.Path" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="checkbox-list">
                            <label class="checkbox">
                                <input type="checkbox" checked="checked" asp-for="@Model.BlogCategory.IsActive"/>
                                <span></span>
                                فعال بودن
                            </label>
                        </div>
                        <div class="form-group mt-5">
                            <label>ترتیب نمایش در منو</label>
                            <input asp-for="@Model.BlogCategory.DisplayOrder" class="form-control form-control-solid" />
                            <span asp-validation-for="@Model.BlogCategory.DisplayOrder" class="mt-5" style="color: red;margin-top:10px"></span>
                        </div>
                        <input asp-for="@Model.BlogCategory.Depth" hidden="hidden" value="0"/>
                        <div class="form-group">
                            <label>انتخاب منوی پدر</label>
                            <br/>
                            <input type="radio" id="0" checked="checked" name="Category.ParentId" value="0">
                            <label for="0">بی پدر! :))</label>
                            <input hidden="hidden" id="path_0" value=""/>
                            <input hidden="hidden" id="depth_0" value="-1"/>

                           @* <partial name="_ParentBlogCategory" model="@Model.BlogCategories"/>*@
                        </div>

                        <div class="form-group">
                            <label>توضیحات</label>
                            <textarea asp-for="@Model.BlogCategory.Description" id="Description_Add" class="form-control form-control-solid" rows="6"></textarea>

                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">ثبت</button>
                        <a class="btn btn-secondary" asp-Page="/BlogCategories/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>

@section Scripts
{
	<script src="~/Admin/js/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        window.onload = function() {
            CKEDITOR.replace('Description_Add');
        };
    </script>
}